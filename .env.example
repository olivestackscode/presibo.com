# Presibo.com Environment Variables Template
# Copy this file to .env and fill in your actual values
# Keep .env file secure and never commit to version control

# Anthropic AI API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_URL=https://api.anthropic.com/v1/messages
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Database Configuration
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=presibo_db
# DB_USER=presibo_user
# DB_PASSWORD=your_secure_password

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Paystack Configuration (for payment processing)
# PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
# PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key

# Email Configuration (for notifications)
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password
# MAIL_FROM_ADDRESS=noreply@presibo.com
# MAIL_FROM_NAME=Presibo

# SMS Configuration (for notifications)
# SMS_API_KEY=your_sms_api_key
# SMS_SENDER_ID=Presibo

# Security Keys
# JWT_SECRET=your_jwt_secret_key_here
# ENCRYPTION_KEY=your_encryption_key_here

# Third-party Services
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key
# FIREBASE_CONFIG=your_firebase_config_json

# Feature Flags
ENABLE_AI_SEARCH=true
ENABLE_ELDER_CARE=true
ENABLE_HEALTH_TIPS=true