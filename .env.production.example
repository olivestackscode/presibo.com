# .env.production.example
# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

# ===========================================
# REQUIRED: API Keys and Secrets
# ===========================================

# Anthropic Claude AI API Key (REQUIRED for health search)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Environment settings
NODE_ENV=production
APP_ENV=production
PORT=3000

# Security settings
ENABLE_HTTPS=true
APP_DEBUG=false

# Application URL (for absolute links and redirects)
APP_URL=https://presibo.com

# ===========================================
# FEATURE FLAGS
# ===========================================

# AI-powered health search feature
ENABLE_AI_SEARCH=true

# Elder care services
ENABLE_ELDER_CARE=true

# Daily health tips feature
ENABLE_HEALTH_TIPS=true

# ===========================================
# API CONFIGURATION
# ===========================================

# Anthropic AI configuration
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_API_URL=https://api.anthropic.com/v1/messages

# ===========================================
# CONTACT INFORMATION
# ===========================================

# Support contact details
SUPPORT_PHONE=+234 703 281 0862
SUPPORT_EMAIL=info@presibo.com

# ===========================================
# PERFORMANCE & CACHING
# ===========================================

# Cache duration in seconds (1 hour = 3600)
CACHE_DURATION=3600

# ===========================================
# DEPLOYMENT-SPECIFIC SETTINGS
# ===========================================

# For Vercel deployment
# VERCEL_URL will be automatically set by Vercel

# For Netlify deployment
# Set these in Netlify dashboard

# For Heroku deployment
# heroku config:set VARIABLE_NAME=value

# For Docker deployment
# Set these in docker-compose.yml or .env file

# ===========================================
# OPTIONAL: Third-party Integrations
# ===========================================

# Payment processing (if needed)
# PAYSTACK_PUBLIC_KEY=pk_test_your_key_here
# PAYSTACK_SECRET_KEY=sk_test_your_key_here

# Email service (if needed)
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password

# Analytics (if needed)
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ===========================================
# MONITORING & LOGGING
# ===========================================

# Error tracking (if using services like Sentry)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log level for production
LOG_LEVEL=info